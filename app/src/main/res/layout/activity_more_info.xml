<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".more_info">

    <TextView
        android:id="@+id/heading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Information"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="20dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading2"
        android:layout_marginLeft="25dp">

        <TextView
            android:id="@+id/sem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semester "
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sem"
            android:layout_marginTop="60dp"
            android:text="Skills"/>

        <TextView
            android:id="@+id/Dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of birth"
            android:layout_below="@id/skills"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course"
            android:layout_below="@id/Dob"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/activites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/course"
            android:text="Activities"
            android:layout_marginTop="60dp"/>


        <EditText
            android:id="@+id/etSem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/Dob"
            android:layout_marginLeft="20dp"
            android:width="180dp"
            />


        <EditText
            android:id="@+id/etSkills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/Dob"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:width="180dp"
            android:layout_below="@+id/etSem"/>

        <EditText
            android:id="@+id/etDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etSkills"
            android:width="180dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/Dob"
            android:layout_marginLeft="20dp"
            android:hint="dd/mm/yy"
            android:inputType="date"/>

        <Spinner
            android:id="@+id/sp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etDob"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="55dp"
            />

        <Spinner
            android:id="@+id/sp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sp1"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="35dp"/>

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sp2"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:text="save"
            android:enabled="false"/>


    </RelativeLayout>

</RelativeLayout>